<UserControl
    x:Class="InventoryManagamentSystem_WPF_DB.Views.MainMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InventoryManagamentSystem_WPF_DB.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            Style="{StaticResource Heading}"
            Text="Inventory Management System" />
        <Button
            Grid.Row="1"
            Margin="0,48,0,0"
            Command="{Binding AddProductCommand}"
            Content="Add product" />
        <Button
            Grid.Row="2"
            Margin="0,24,0,0"
            Command="{Binding RemoveProductCommand}"
            Content="Remove product" />
        <Button
            Grid.Row="3"
            Margin="0,24,0,0"
            Command="{Binding BrowseProductsCommand}"
            Content="Browse products" />
        <Button
            Grid.Row="4"
            Margin="0,24,0,0"
            Command="{Binding QuitCommand}"
            Content="Quit" />
        <TextBlock
            Grid.Row="5"
            Margin="0,24,0,0"
            HorizontalAlignment="Center"
            Text="PRAKTIČNI PROJEKAT IZ PREDMETA VIŠI PROGRAMSKI JEZICI - FILIP BALABAN" />
    </Grid>
</UserControl>
